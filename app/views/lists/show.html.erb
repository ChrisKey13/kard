<h2>This how your list is entitled </h2>
<h1><%= @list.title %> </h1>

<br>
<%= @list.description %>

<%= link_to 'Edit Your List', edit_list_path(@list) %>

<%= link_to list_path(@list), method: :delete, data: { confirm: 'Are you sure?' } do %>
  Delete
<% end %>

<div>

  <ol>
    <ul>
      <% @list.flashcards.each do |flashcard| %>
      <li>
        <%= flashcard.title %>
        <%= flashcard.content %>
        <%= flashcard.language.name %>
        <% if flashcard.photo.attached? %>
          <%= cl_image_tag flashcard.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <p>No photo to displayed</p>
        <% end %>
        <%= link_to 'Edit', list_flashcard_path(flashcard) %>
        <%= link_to flashcard_path(flashcard), method: :delete, data: { confirm: "Are you sure?" } do %>
        <h1>Delete</h1>
        <% end %>
      <% end %>
      </li>
    </ul>


  </ol>
</div>


<%= link_to 'Go Back To Homepage', root_path %>


<div class="col-sm-12 col-md-6">
  <%= render "flashcards/new", list: @list, flashcard: @flashcard %>
</div>
